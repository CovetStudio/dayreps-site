    /* 
MENU
*/
.top-bar {
    position:fixed;
    top:30px;
    width:100%;
    box-sizing:border-box;
    padding:0 40px;
    z-index:999;
    height:40px;
}
.title-area {
    float:left;
    display:inline;
    list-style:none;
    margin:0;
    padding:0    
}
 li {
     list-style:none;
 }
.top-bar-section>.menu {
    float:right;
    display:inline;
    list-style:none;
    margin:0;
    padding:0;
    border: solid 1px rgba(255,255,255,.7);
    box-sizing:border-box;

}
.top-bar-section>.menu>li {
    display:inline;
    margin:0;
    padding:0;
    float:left;
    line-height:1;
    position:relative;
}
.top-bar-section>.menu>li>a {
    line-height:40px;
    padding: 12px 30px;
    text-transform:uppercase;
    color:#fff;
    font-size:12px;
    letter-spacing:1px;
}

.top-bar-section>.menu>li.one  {
    background: rgba(224,175,72,.8);
}
.top-bar-section>.menu>li.two {
    background: rgba(108,152,153,.8);
}
.top-bar-section>.menu>li.three {
    background: rgba(45,45,45,.8);
}
.top-bar-section>.menu>li.four  {
    background: rgba(224,191,198,.8);
}
.top-bar-section>.menu>li.five {
    background: rgba(178,80,57,.8);
}
.top-bar-section>.menu>li.one:hover  {
    background: rgba(224,175,72,1);
}
.top-bar-section>.menu>li.two:hover {
    background: rgba(108,152,153,1);
}
.top-bar-section>.menu>li.three:hover {
    background: rgba(45,45,45,1);
}
.top-bar-section>.menu>li.four:hover  {
    background: rgba(224,191,198,1);
}
.top-bar-section>.menu>li.five:hover {
    background: rgba(178,80,57,1);
}


.top-bar-section>.menu li>.menu {
  display: none;
  position:absolute;
  top: 40px;
  left: 0px;
  background: rgba(108,152,153,1);
  padding: 20px 0
}
.top-bar-section>.menu li:hover >.menu {
    display: block
} 
.top-bar-section>.menu li>.menu li, .top-bar-section>.menu li>.menu li a {
    text-transform:uppercase;
    line-height: 2;
    color:#fff;
    font-size: 14px;
    padding: 10px 20px
}


.top-bar-section>.menu li>.menu li>.menu {
  display: none;
  position:absolute;
  top: 20px;
  left: 90%;
  background: rgba(118,148,145,1);
  padding: 20px 0;
  width:200px
}
.top-bar-section>.menu li>.menu li:hover>.menu  {
    display: block
} 


 /* ==========================================================================
   Slider
   ========================================================================== */

.slide-me-item {
    width: 100vw;
    height: 60vh;
    min-height: calc(100vw / 2);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    position: relative;
    outline: none;
    line-height: 0;
    margin: 0;
    padding: 0;
}
.slick-vertical .slick-slide {
    border:none;
}

.slick-dots {
    position: absolute;
    top: 50%;
    right: 30px;
    list-style: none;
    text-align: right;
    margin: 0;
    padding: 0;
    line-height: 1em;
    width: 50px
}

.slick-dots li {
    position: relative;
    display: block;
    padding: 0;
    cursor: pointer;
    text-align: right; 
}
.slick-dots li button {
    background: #E0AF48;
    display: block;
    height: 4px;
    width: 33px;
    min-width: 0;
    outline: none;
    line-height: 0px;
    font-size: 0px;
    color: transparent;
    padding: 0;
    cursor: pointer;
    border-radius: 0;
    border: none;
    text-align: right;
    float: right;
    margin: 6px;
    transition: 200ms;

}
.slick-dots .slick-active button{
    width: 50px;
    background: #3D6E6B;

}

.slide-me .reverse {
    display: none;
}
.logo-black {
    display:none
}
* {font-family: helvetica}

.gridzyCaption {
    text-transform:uppercase;
    letter-spacing:2px;
}

